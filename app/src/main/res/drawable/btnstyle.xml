<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="#f4c2c2" android:width="3dip"/>
            <solid android:color="#e88181"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:color="#f0acac" android:width="3dip"/>
            <solid android:color="#f4c2db"/>
</shape>
</item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fceded"/>
            <stroke android:color="#e88181" android:width="3dip"/>
</shape>
</item>
</selector>